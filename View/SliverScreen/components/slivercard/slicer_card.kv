<SliverCard>
    size_hint_y: None
    height: "86dp"
    padding: "4dp"
    radius: 12
    elevation: .5
    shadow_offset: 0, -1
    shadow_radius: 16
    shadow_softness: 0

    FitImage:
        source: root.image
        radius: root.radius
        size_hint_x: None
        width: root.height

    MDBoxLayout:
        orientation: "vertical"
        adaptive_height: True
        spacing: "6dp"
        padding: "12dp", 0, 0, 0
        pos_hint: {"center_y": .5}

        MDLabel:
            text: "Title text"
            font_style: "H5"
            bold: True
            adaptive_height: True

        MDLabel:
            text: "Subtitle text"
            theme_text_color: "Hint"
            adaptive_height: True
